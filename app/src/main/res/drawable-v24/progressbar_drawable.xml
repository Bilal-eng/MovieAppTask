<?xml version="1.0" encoding="utf-8"?>
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:pivotX="50%" android:pivotY="50%" android:fromDegrees="0"
    android:toDegrees="1800">
    <shape android:shape="ring" android:innerRadiusRatio="2.3"
        android:thicknessRatio="20" android:useLevel="false">

        <size android:width="80dip" android:height="80dip" />
        <gradient android:type="linear" android:useLevel="false"
            android:startColor="@android:color/transparent"
            android:endColor="@android:color/white"
            android:centerColor="@color/purple_700"
            android:angle="0"
            />
    </shape>
</rotate>